$(avahi-browse -ltrap | awk '/=;br-lan.*_mesh/' | while read anode; do
echo "	<tr>"
echo "		<td>$(echo "$anode" | awk -F\; '{print $7}')</td>"
echo "		<td>$(echo "$anode" | awk -F\; '{print $8}')</td>"
echo "		<td>$(echo "$anode" | awk -F\; '{sub(/"mode=/, "", $10); sub(/"/, "", $10); print $10}')</td>"
echo "	</tr>"
done)
</table>
